<div class="d-flex justify-content-center mt-5">
  <div class="card" style="width: 24rem;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource, class: "alert alert-danger" %>

        <!-- Campo de nombre -->
        <div class="mb-3">
          <%= f.label :first_name, "First Name", class: "form-label" %>
          <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        </div>

        <!-- Campo de apellido -->
        <div class="mb-3">
          <%= f.label :last_name, "Last Name", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <!-- Campo de ocupación -->
        <div class="mb-3">
          <%= f.label :occupation, "Occupation", class: "form-label" %>
          <%= f.text_field :occupation, class: "form-control" %>
        </div>

        <!-- Campo de correo electrónico -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Campo de contraseña -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Confirmación de contraseña -->
        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Botón de registro -->
        <div class="d-grid">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
  