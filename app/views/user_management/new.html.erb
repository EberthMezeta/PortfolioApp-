<h1>Crear Nuevo Usuario</h1>

<%= form_with(model: @user, url: custom_create_user_path, local: true) do |form| %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.label :role %>
    <%= form.select :role, ['admin', 'user'] %>
  </div>
  <div>
    <%= form.submit "Crear Usuario" %>
  </div>
<% end %>


